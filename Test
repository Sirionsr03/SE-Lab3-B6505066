BEGIN TRANSACTION;
CREATE TABLE IF NOT EXISTS "products" (
	"id"	integer,
	"created_at"	datetime,
	"updated_at"	datetime,
	"deleted_at"	datetime,
	"title"	text,
	"description"	text,
	"price"	integer,
	"category"	text,
	"picture_product"	text,
	"condition"	text,
	"weight"	real,
	"status"	text,
	"member_id"	integer,
	CONSTRAINT "fk_members_products" FOREIGN KEY("member_id") REFERENCES "members"("id"),
	PRIMARY KEY("id" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "sellers" (
	"id"	integer,
	"created_at"	datetime,
	"updated_at"	datetime,
	"deleted_at"	datetime,
	"year"	integer,
	"institute_of"	text,
	"major"	text,
	"picture_student"	text,
	"member_id"	integer,
	PRIMARY KEY("id" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "chat_informs" (
	"id"	integer,
	"created_at"	datetime,
	"updated_at"	datetime,
	"deleted_at"	datetime,
	"user_id"	text,
	"text_display"	text,
	"seller_id"	integer,
	"member_id"	integer,
	"product_id"	integer,
	CONSTRAINT "fk_sellers_chat_inform" FOREIGN KEY("member_id") REFERENCES "sellers"("id"),
	CONSTRAINT "fk_chat_informs_seller" FOREIGN KEY("seller_id") REFERENCES "sellers"("id"),
	CONSTRAINT "fk_products_chat_inform" FOREIGN KEY("member_id") REFERENCES "products"("id"),
	CONSTRAINT "fk_members_chat_inform" FOREIGN KEY("member_id") REFERENCES "members"("id"),
	CONSTRAINT "fk_chat_informs_products" FOREIGN KEY("product_id") REFERENCES "products"("id"),
	PRIMARY KEY("id" AUTOINCREMENT)
);
CREATE TABLE IF NOT EXISTS "members" (
	"id"	integer,
	"created_at"	datetime,
	"updated_at"	datetime,
	"deleted_at"	datetime,
	"username"	text,
	"password"	text,
	"email"	text,
	"first_name"	text,
	"last_name"	text,
	"phone_number"	text,
	"address"	text,
	"profile_pic"	text,
	"seller_id"	integer,
	CONSTRAINT "fk_members_seller" FOREIGN KEY("seller_id") REFERENCES "sellers"("id"),
	PRIMARY KEY("id" AUTOINCREMENT)
);
CREATE INDEX IF NOT EXISTS "idx_products_deleted_at" ON "products" (
	"deleted_at"
);
CREATE INDEX IF NOT EXISTS "idx_sellers_deleted_at" ON "sellers" (
	"deleted_at"
);
CREATE INDEX IF NOT EXISTS "idx_chat_informs_deleted_at" ON "chat_informs" (
	"deleted_at"
);
CREATE INDEX IF NOT EXISTS "idx_members_deleted_at" ON "members" (
	"deleted_at"
);
COMMIT;